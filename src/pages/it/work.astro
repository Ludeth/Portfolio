---
import { t, changeLanguage } from "i18next";
import { localizePath } from "astro-i18next";
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import ContactCTA from "../../components/ContactCTA.astro";
import PortfolioPreview from "../../components/PortfolioPreview.astro";
import Hero from "../../components/Hero.astro";
import Grid from "../../components/Grid.astro";
import Icon from "../../components/Icon.astro";

changeLanguage("it");

const projects = (await getCollection("work_it")).sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()).slice(0, 5);
---

<BaseLayout title={t( "work.myworkt")} description={t( "work.myworktd")}>
  <div class="stack gap-20">
      <main class="wrapper stack gap-8">
          <Hero title={t( "work.mywork")} tagline={t( "work.myworkd")} align="start" />
          <Grid variant="offset">
              { projects.map((project) => (
              <li>
                  <PortfolioPreview project={project} />
              </li>
              )) }
          </Grid>
          <!-- Comparison Load -->
          <script defer src="https://unpkg.com/img-comparison-slider@7/dist/index.js"></script>
          <link rel="stylesheet" href="https://unpkg.com/img-comparison-slider@7/dist/styles.css" />
          <!-- End Comparison Load -->

          <!-- Start Gallery -->
          <Hero title={t( "work.work1")} tagline={t( "work.work2")} align="start" />
          <div class="grid-container">
            <div>
              <a class="tile-link" href={localizePath( "/work/you")}>
              <img class='grid-item grid-item-1' src='/assets/artworks/p1.webp' alt=''>
              </a>
              <p>You</p>
            </div>
            <div>
              <a class="tile-link" href={localizePath( "/work/energy-and-light")}>
              <img class='grid-item grid-item-2' src='/assets/artworks/p2.webp' alt=''>
              </a>
              <p>Energy and Light</p>
            </div>
            <div>
              <a class="tile-link" href={localizePath( "/work/the-moon")}>
              <img class='grid-item grid-item-3' src='/assets/artworks/p3.webp' alt=''>
              </a>
              <p>The Moon</p>
            </div>
            <div>
              <a class="tile-link" href={localizePath( "/work/wonder")}>
              <img class='grid-item grid-item-4' src='/assets/artworks/s2.webp' alt=''>
              </a>
              <p>Wonder</p>
            </div>
            <div>
              <a class="tile-link" href={localizePath( "/work/quirks")}>
              <img class='grid-item grid-item-5' src='/assets/artworks/s1.webp' alt=''>
              </a>
              <p>Quirks</p>
            </div>
            <div>
              <a class="tile-link" href={localizePath( "/work/i-love-you")}>
              <img class='grid-item grid-item-6' src='/assets/artworks/p4.webp' alt=''>
              </a>
              <p>I love You</p>
            </div>
          </div>
          <!-- End Gallery -->

          <!-- Logo -->
          <Hero title={t( "work.work3")} tagline={t( "work.work4")} align="start" />
          
          <Grid>
            <div>
              <div>
                <a href={localizePath( "/work/pdj" )}>
                  <img src="/assets/artworks/logo1.webp" width="60%" height="60%" alt="Prodotti dal Giappone" style="border-radius: 30px;">
                  </a>
                </div>
                <div style="font-size: var(--text-lg);">
                  <h4>{t("work.work5")}</h4> {t("work.work6")} <br>
                  <br>
                  <Icon icon="arrow-up" color="var(--accent-dark)" size="1.4em" />
                  <i>{t("work.work9")}</i>
              </div>
            </div>
            <div>
              <br>
              <br>
              <div>
                <a href={localizePath( "/work/hosto" )}>
                  <img src="/assets/artworks/logo2.webp" width="90%" height="90%" alt="Hosto" style="border-radius: 30px;">
                </a>
              </div>
              <div style="font-size: var(--text-lg);">
                <h4>{t("work.work7")}</h4> {t("work.work8")} <br>
                <br>
                <Icon icon="arrow-up" color="var(--accent-dark)" size="1.4em" />
                <i>{t("work.work10")}</i>
                <a href="https://beta.hosto.cc/">Hosto</a>
              </div>
            </div>
          </Grid>
          <br>
          <br>
          <!-- End Logo-->

          <Hero title={t( "work.restauro")} tagline={t( "work.restaurod")} align="start" />
          <!-- Restauro -->
          <Grid>
              <div>
                  <img-comparison-slider class="slider-example-opacity-and-size rendered" tabindex="0">
                      <img slot="first" src="/assets/artworks/Rework_prima.webp" />
                      <img slot="second" src="/assets/artworks/Rework_dopo.webp" />
                  </img-comparison-slider>
              </div>
              <div class="text">
                  <h4>{t("work.restauro1")}</h4>
                  {t("work.restauro1d")}
                  <h4>{t("work.restauro2")}</h4>
                  {t("work.restauro2d")}
              </div>
          </Grid>
          <!-- End Restauro -->

      </main>
      <ContactCTA />
  </div>
</BaseLayout>

<style>
  .slider-example-opacity-and-size {
      --default-handle-width: 100px;
      transition: box-shadow 200ms ease-in-out;
  }
  
  .slider-example-opacity-and-size:focus {
      --default-handle-opacity: 0;
      outline: none;
      box-shadow: 0px 0px 15px 5px #5f5f5f5c;
  }
  
    img-comparison-slider {
    --divider-width: 2px;
      --divider-color: #ad5da5;
  }
  
  h4{
    margin-top: 1.5em;
      margin-bottom: 0.5em;
  }
  .text {
    font-size: var(--text-lg);
  }
  
  .grid-container {
    columns: 3 200px;
    column-gap: 1.5rem;
    width: 100%;
    margin: 0 auto;
    div {
      width: 150px;
      margin: 0 1.5rem 1.5rem 0;
      display: inline-block;
      width: 100%;
      border: solid 2px black;
      padding: 5px;
      box-shadow: 5px 5px 5px rgba(0,0,0,0.5);
      border-radius: 5px;
      transition: all .25s ease-in-out;
      &:hover img {
        filter: grayscale(0);
      }
      &:hover {
        border-color: rgb(255, 80, 217);
      }
      img {
        width: 100%;
        filter: grayscale(100%);
        border-radius: 5px;
        transition: all .25s ease-in-out;
      }
      p {
        margin: 5px 0;
        padding: 0;
        text-align: center;
        font-style: italic;
      }
    }
  }
  
  </style>
